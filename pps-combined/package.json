{
	"name": "point-prevalence-survey-system",
	"version": "1.0.0",
	"description": "Point Prevalence Survey data management system with Go backend and Next.js frontend",
	"private": true,
	"workspaces": [
		"frontend",
		"backend"
	],
	"scripts": {
		"dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
		"dev:backend": "cd backend && go run main.go",
		"dev:frontend": "cd frontend && npm run dev",
		"build": "npm run build:frontend && npm run build:backend",
		"build:frontend": "cd frontend && npm run build",
		"build:backend": "cd backend && go build -o main .",
		"start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
		"start:backend": "cd backend && ./main",
		"start:frontend": "cd frontend && npm run start",
		"docker:build": "docker-compose build",
		"docker:up": "docker-compose up -d",
		"docker:down": "docker-compose down",
		"docker:logs": "docker-compose logs -f",
		"install:all": "npm install && cd frontend && npm install",
		"clean": "rm -rf frontend/node_modules frontend/.next backend/main",
		"setup": "npm run install:all && cd backend && go mod download"
	},
	"devDependencies": {
		"concurrently": "^9.2.1"
	},
	"engines": {
		"node": ">=18.0.0",
		"go": ">=1.21.0"
	},
	"keywords": [
		"point-prevalence-survey",
		"healthcare",
		"antibiotic-resistance",
		"go",
		"nextjs",
		"typescript",
		"postgresql"
	],
	"author": "MOH Uganda",
	"license": "MIT"
}
